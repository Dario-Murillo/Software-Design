@model SimpleMVC.Models.User;

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Age</dt>
        <dd>@Model.Age</dd>
    </dl>
</div>